{
    "name": "proxy-extend",
    "version": "1.0.3",
    "description": "Transparently extend a JS object with additional properties (using ES6 Proxy)",
    "keywords": [
        "es6",
        "proxy",
        "extend",
        "object",
        "wrapper",
        "metadata",
        "object",
        "extension",
        "annotate",
        "annotation",
        "typescript"
    ],
    "author": "mkrause",
    "license": "MIT",
    "repository": "https://github.com/mkrause/proxy-extend",
    "files": [
        "src/",
        "lib-cjs/",
        "lib-esm/",
        "typings/index.d.ts"
    ],
    "type": "module",
    "main": "./lib-cjs/index.cjs",
    "module": "./lib-esm/index.mjs",
    "__exports": {
        "//": "Disabled until conditional exports are supported in Node without experimental flag (otherwise we cannot support both CommonJS and ESM)",
        ".": {
            "require": "./lib-cjs/index.cjs",
            "default": "./lib-esm/index.mjs"
        }
    },
    "types": "./typings/index.d.ts",
    "scripts": {
        "build:cjs": "NODE_ENV=production BABEL_ENV=cjs babel src --out-dir=lib-cjs --out-file-extension=.cjs",
        "build:esm": "NODE_ENV=production BABEL_ENV=esm babel src --out-dir=lib-esm --out-file-extension=.mjs",
        "test": "NODE_ENV=development BABEL_ENV=cjs mocha --require @babel/register --recursive tests/unit && tsd && echo '[tsd] success'",
        "test:perf": "NODE_ENV=development node tests/perf",
        "prepublishOnly": "npm run build:cjs && npm run build:esm"
    },
    "devDependencies": {
        "@babel/core": "^7.8.0",
        "@babel/register": "^7.8.0",
        "@babel/cli": "^7.8.0",
        "@babel/preset-env": "^7.8.0",
        "typescript": "^3.7.4",
        "tsd": "^0.11.0",
        "mocha": "^7.0.0",
        "chai": "^4.2.0",
        "benny": "^3.6.14"
    },
    "dependencies": {
        "ts-toolbelt": "^6.1.6",
        "message-tag": "^0.4.2"
    }
}
